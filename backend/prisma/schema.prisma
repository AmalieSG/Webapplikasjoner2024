datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String   @id @default(cuid())
  email String   @unique
  name  String   @default("Unnamed")
  role  String   @default("user")
}

model Project {
  id          String        @id @default(cuid())
  title       String        
  description String        ?
  publishedAt DateTime
  status      ProjectStatus @relation(fields: [statusId], references: [id])
  statusId    String
  isPublic    Boolean
  categories  Category[]    @relation("ProjectCategories")
}

model Category {
  id       String     @id @default(cuid())
  name     String     @unique
  projects Project[]  @relation("ProjectCategories")
}

model ProjectStatus {
  id       String   @id @default(cuid())
  name     String   @unique
  projects Project[] @relation
}
